<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
  <View
      android:id="@+id/background"
      android:layout_width="match_parent"
      android:layout_height="@dimen/_150sdp"
      android:background="@color/banner_background"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintTop_toTopOf="parent"/>

  <ImageView
      android:id="@+id/icon"
      android:layout_width="wrap_content"
      android:layout_height="@dimen/banner_icon_height"
      android:layout_centerHorizontal="true"
      android:layout_centerVertical="true"
      android:src="@drawable/error_icon"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintTop_toTopOf="@id/background"
      app:layout_constraintBottom_toBottomOf="@id/background"/>

  <TextView
      android:id="@+id/title"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:gravity="center"
      android:paddingLeft="@dimen/dialog_padding"
      android:paddingRight="@dimen/dialog_padding"
      android:paddingTop="@dimen/dialog_padding"
      android:text="Temporarily No Longer Functional"
      android:textColor="#000000"
      android:textSize="@dimen/_18ssp"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintTop_toBottomOf="@id/background"/>



  <TextView
      android:id="@+id/message"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_below="@+id/title"
      android:layout_marginTop="@dimen/dialog_padding"
      android:paddingLeft="@dimen/dialog_padding"
      android:paddingRight="@dimen/dialog_padding"
      android:text="Yelp has informed me that I will no longer be able to use their data and gave me only 4 days notice of this change so unfortunately Random Restaurant Picker will no longer work until I am able to update the app to use a different data source.\n\nI appreciate all the support and hope to come back even better around June\n\nI would greatly appreciated it if you do not leave a bad review as this is out of my control and maintaining a good rating during this time is important for the app to make a comeback in the future!"
      android:textSize="@dimen/_15ssp"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintTop_toBottomOf="@id/title" />
</androidx.constraintlayout.widget.ConstraintLayout>
