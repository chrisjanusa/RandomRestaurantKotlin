<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="DialogButtonAppearance" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:gravity">center</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:paddingStart">@dimen/_8sdp</item>
        <item name="android:paddingEnd">@dimen/_8sdp</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="enforceTextAppearance">@style/ButtonTextAppearance</item>
        <item name="android:textSize">@dimen/button_text_size</item>
        <item name="cornerRadius">@dimen/button_radius</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/button_text</item>
    </style>

    <style name="DialogApplyAppearance" parent="Widget.MaterialComponents.Button">
        <item name="android:gravity">center</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:paddingStart">@dimen/_8sdp</item>
        <item name="android:paddingEnd">@dimen/_8sdp</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="enforceTextAppearance">@style/ButtonTextAppearance</item>
        <item name="android:textSize">@dimen/button_text_size</item>
        <item name="cornerRadius">@dimen/button_radius</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/apply_button_text</item>
    </style>

</resources>