<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/restaurantContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/corner_radius"
        app:cardElevation="2dp"
        app:contentPadding="@dimen/restaurant_padding">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <LinearLayout
                android:id="@+id/imageHolder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/restaurant_padding">

            <ImageView
                    android:id="@+id/thumbnail"
                    android:layout_width="@dimen/thumbnail_dimen"
                    android:layout_height="@dimen/thumbnail_dimen"/>

            <ImageView
                    android:id="@+id/rating"
                    android:layout_width="@dimen/thumbnail_dimen"
                    android:layout_height="@dimen/star_height"
                    android:layout_marginTop="@dimen/restaurant_padding"/>
        </LinearLayout>

        <TextView
                android:id="@+id/name"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/imageHolder"
                android:layout_toRightOf="@+id/imageHolder"
                android:text="@string/app_name"
                android:gravity="top"
                android:paddingLeft="@dimen/restaurant_padding"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="@dimen/restaurant_name"/>

        <TextView
                android:id="@+id/categories"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/name"
                android:layout_toEndOf="@+id/imageHolder"
                android:layout_toRightOf="@+id/imageHolder"
                android:paddingLeft="@dimen/restaurant_padding"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textSize="@dimen/restaurant_text_size"/>

        <TextView
                android:id="@+id/deals"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/categories"
                android:layout_toEndOf="@+id/imageHolder"
                android:layout_toRightOf="@+id/imageHolder"
                android:paddingLeft="@dimen/restaurant_padding"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#66BB6A"
                android:textSize="@dimen/restaurant_text_size"/>

        <TextView
                android:id="@+id/distancePriceReviewCount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/deals"
                android:layout_toEndOf="@+id/imageHolder"
                android:layout_toRightOf="@+id/imageHolder"
                android:paddingLeft="@dimen/restaurant_padding"
                android:textAppearance="?android:attr/textAppearanceSmall"/>


        <ImageButton
                android:id="@+id/saveButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/imageHolder"
                android:background="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:layout_toLeftOf="@+id/removeButton"
                android:src="@drawable/star_not"/>

        <ImageButton
                android:id="@+id/removeButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/imageHolder"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:background="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:src="@drawable/block_not"/>

    </RelativeLayout>

</androidx.cardview.widget.CardView>
