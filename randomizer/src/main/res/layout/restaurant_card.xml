<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/restaurantContainer"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        app:cardCornerRadius="@dimen/card_corner_radius"
        app:cardElevation="@dimen/card_elevation">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" >


        <ImageView
                android:id="@+id/thumbnail"
                android:src="@drawable/test_thumbnail"
                android:layout_width="@dimen/thumbnail_dimen"
                android:layout_height="@dimen/thumbnail_dimen"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:contentDescription="@string/restaurant_picture"/>

        <RatingBar
                android:id="@+id/rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/thumbnail"
                app:layout_constraintStart_toStartOf="@+id/thumbnail"
                android:isIndicator="true"
                android:rating="2.5"
                android:numStars="5"
                style="?android:attr/ratingBarStyleSmall"
        />

        <TextView
                android:id="@+id/name"
                android:text="name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="top"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="@dimen/restaurant_text_size"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@+id/thumbnail"
        />

        <TextView
                android:id="@+id/categories"
                android:text="cat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="4dp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textSize="@dimen/restaurant_text_size"
                app:layout_constraintTop_toBottomOf="@+id/name"
                app:layout_constraintStart_toEndOf="@+id/thumbnail"
        />

        <TextView
                android:id="@+id/distancePriceReviewCount"
                android:text="dist / price / count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                app:layout_constraintTop_toBottomOf="@+id/categories"
                app:layout_constraintStart_toEndOf="@+id/thumbnail"
        />


        <ImageButton
                android:id="@+id/saveButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:src="@drawable/star_not"
                app:layout_constraintTop_toTopOf="@+id/blockButton"
                app:layout_constraintEnd_toStartOf="@+id/blockButton"
                android:focusable="true"
                android:contentDescription="@string/save_to_favorites"/>

        <ImageButton
                android:id="@+id/blockButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:src="@drawable/block_not"
                android:layout_marginTop="5dp" 
                app:layout_constraintTop_toBottomOf="@+id/distancePriceReviewCount"
                app:layout_constraintEnd_toEndOf="parent" 
                android:focusable="true"
                android:contentDescription="@string/block"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>
