<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ButtonTextAppearance" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="FilterAppearance" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:gravity">center</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:backgroundTint">@color/filter_background_not_selected</item>
        <item name="android:paddingStart">@dimen/_8sdp</item>
        <item name="android:paddingEnd">@dimen/_8sdp</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:textColor">@color/filter_text_not_selected</item>
        <item name="enforceTextAppearance">@style/ButtonTextAppearance</item>
        <item name="android:textSize">@dimen/_8ssp</item>
        <item name="cornerRadius">@dimen/button_radius</item>
        <item name="android:textAllCaps">false</item>
        <item name="iconGravity">textEnd</item>
        <item name="iconSize">@dimen/_15sdp</item>
        <item name="iconTint">@android:color/transparent</item>
        <item name="android:layout_marginStart">@dimen/_4sdp</item>
    </style>

    <style name="PriceButtonAppearance" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:gravity">center</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">@dimen/price_width</item>
        <item name="android:backgroundTint">@color/filter_background_not_selected</item>
        <item name="android:paddingStart">@dimen/_8sdp</item>
        <item name="android:paddingEnd">@dimen/_8sdp</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:textColor">@color/filter_text_not_selected</item>
        <item name="enforceTextAppearance">@style/ButtonTextAppearance</item>
        <item name="android:textSize">@dimen/price_text_size</item>
        <item name="cornerRadius">@dimen/button_radius</item>
    </style>

    <style name="DietButtonAppearance" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:gravity">center</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">@dimen/diet_width</item>
        <item name="android:backgroundTint">@color/filter_background_not_selected</item>
        <item name="android:paddingStart">@dimen/_8sdp</item>
        <item name="android:paddingEnd">@dimen/_8sdp</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:textColor">@color/filter_text_not_selected</item>
        <item name="enforceTextAppearance">@style/ButtonTextAppearance</item>
        <item name="android:textSize">@dimen/diet_text_size</item>
        <item name="cornerRadius">@dimen/button_radius</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Slider" parent="Widget.MaterialComponents.Slider">
        <item name="android:gravity">center</item>
    </style>

    <style name="FilterButtonAppearance" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:gravity">center</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:paddingStart">@dimen/_8sdp</item>
        <item name="android:paddingEnd">@dimen/_8sdp</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="enforceTextAppearance">@style/ButtonTextAppearance</item>
        <item name="android:textSize">@dimen/filter_confirm_text_size</item>
        <item name="cornerRadius">@dimen/button_radius</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/filter_overlay_text</item>
    </style>

    <style name="FilterApplyAppearance" parent="Widget.MaterialComponents.Button">
        <item name="android:gravity">center</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:paddingStart">@dimen/_8sdp</item>
        <item name="android:paddingEnd">@dimen/_8sdp</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="enforceTextAppearance">@style/ButtonTextAppearance</item>
        <item name="android:textSize">@dimen/filter_confirm_text_size</item>
        <item name="cornerRadius">@dimen/button_radius</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/filter_overlay_background</item>
    </style>

    <style name="TitleAppearance">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:paddingTop">@dimen/filter_overlay_side_margin</item>
        <item name="android:paddingLeft">@dimen/filter_overlay_side_margin</item>
        <item name="android:paddingRight">@dimen/filter_overlay_side_margin</item>
        <item name="android:textSize">@dimen/filter_title_text_size</item>
        <item name="android:textColor">@color/filter_overlay_text</item>
    </style>

    <style name="CuisineIcon">
        <item name="android:layout_height">@dimen/cuisine_icon_size</item>
        <item name="android:layout_width">@dimen/cuisine_icon_size</item>
        <item name="tint">@color/filter_icon_not_selected</item>
    </style>

    <style name="CuisineText">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/_5sdp</item>
    </style>

    <style name="CuisineConstraint">
        <item name="android:padding">@dimen/_15sdp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="CuisineCard" parent="Widget.MaterialComponents.CardView">
        <item name="cardElevation">0dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="strokeWidth">@dimen/_1sdp</item>
        <item name="strokeColor">@color/outline_not_selected</item>
        <item name="android:layout_margin">@dimen/_5sdp</item>
        <item name="cardCornerRadius">@dimen/_8sdp</item>
        <item name="rippleColor">@color/filter_background_selected</item>
    </style>

</resources>