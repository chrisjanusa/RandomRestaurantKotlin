<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/cardMapLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:animateLayoutChanges="true">

    <RelativeLayout android:layout_width="match_parent" android:layout_height="match_parent" android:id="@+id/mapWrapper">

    </RelativeLayout>

    <include
            android:id="@+id/restaurantContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            layout="@layout/bottom_overlay"
            android:layout_gravity="bottom"
            android:layout_marginLeft="@dimen/randomizer_side_margin"
            android:layout_marginRight="@dimen/randomizer_side_margin"
            android:layout_marginBottom="@dimen/randomizer_bottom_margin"/>

    <include
            android:id="@+id/location_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            layout="@layout/top_overlay"
            android:layout_gravity="top"
            />



</FrameLayout>