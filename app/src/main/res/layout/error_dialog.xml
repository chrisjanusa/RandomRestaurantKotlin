<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:layout_marginStart="@dimen/_15sdp"
    android:layout_marginEnd="@dimen/_15sdp"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        app:cardBackgroundColor="@android:color/white"
        app:cardCornerRadius="@dimen/dialog_radius"
        app:cardElevation="@dimen/dialog_elevation"
        app:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/banner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <View
                    android:id="@+id/background"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/banner_height"
                    android:background="@color/banner_background" />

                <ImageView
                    android:id="@+id/icon"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/banner_icon_height"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/error_icon" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/banner"
                android:padding="@dimen/dialog_padding"
                android:paddingBottom="@dimen/_20sdp">

                <TextView
                    android:id="@+id/title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingLeft="@dimen/dialog_padding"
                    android:paddingRight="@dimen/dialog_padding"
                    android:text="Temporarily Down"
                    android:textAlignment="center"
                    android:textColor="#000000"
                    android:textSize="@dimen/dialog_title_size" />

                <TextView
                    android:id="@+id/message"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/title"
                    android:layout_marginTop="@dimen/dialog_padding"
                    android:paddingLeft="@dimen/dialog_padding"
                    android:paddingRight="@dimen/dialog_padding"
                    android:text="Yelp has informed me that I will no longer be able to use their services and gave me only 4 days notice of this change. So unfortunately, Random Restaurant Picker will no longer work until I am able to update the app using a different data source.\n\nI would greatly appreciate it if you can avoid leaving a bad review right now as this is out of my control. Maintaining a good rating during this time will be really important for the app to make a comeback in the future!\n\nI appreciate all the support and hope to come back even better around June!"
                    android:textSize="@dimen/dialog_message_size" />
            </RelativeLayout>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>