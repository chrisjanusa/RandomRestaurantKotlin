<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
        xmlns:android='http://schemas.android.com/apk/res/android'
        xmlns:app='http://schemas.android.com/apk/res-auto'
        android:id='@+id/search_container'
        android:layout_height='wrap_content'
        android:layout_width='match_parent'
        app:cardCornerRadius='@dimen/card_corner_radius'
        app:strokeColor="@color/outline_not_selected"
        app:strokeWidth="@dimen/_1sdp"
        app:cardElevation="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent">
    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/search_bar"
            android:layout_height='match_parent'
            android:layout_width='match_parent'
            android:padding="@dimen/location_side_padding"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:animateLayoutChanges="true">
        <ImageView
                android:id="@+id/search_icon"
                android:layout_width="@dimen/divider_line"
                android:layout_height="@dimen/divider_line"
                android:src="@drawable/search"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

        <ImageView
                android:id="@+id/back_icon"
                android:layout_width="@dimen/_26sdp"
                android:layout_height="@dimen/divider_line"
                android:src="@drawable/back"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:paddingEnd="@dimen/back_button_padding"
                android:paddingStart="@dimen/back_button_padding"
                android:visibility="gone"/>

        <com.seatgeek.placesautocomplete.PlacesAutocompleteTextView
                android:id="@+id/user_input"
                android:layout_width="@dimen/location_search_default_width"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@id/search_icon"
                app:layout_constraintBottom_toBottomOf="parent"
                android:paddingStart="@dimen/location_space"
                android:paddingEnd="@dimen/location_space"
                android:hint="@string/location_prompt"
                app:pacv_languageCode="en"
                app:pacv_googleMapsApiKey="@string/google_api_key"
                app:pacv_adapterClass="com.chrisjanusa.randomizer.location_search.AutocompleteAdapter"
                android:singleLine="true"
                android:ellipsize="end"
                android:dropDownVerticalOffset="0dp"
                android:background="@null"
        />

        <ToggleButton
                android:id='@+id/gps_button'
                android:background='@drawable/gps_selector'
                android:checked='false'
                android:layout_height='@dimen/divider_line'
                android:layout_width='@dimen/divider_line'
                android:text=''
                android:textOff=''
                android:textOn=''
                app:layout_constraintBottom_toBottomOf='parent'
                app:layout_constraintStart_toEndOf="@id/user_input"
                app:layout_constraintTop_toTopOf='parent'/>

        <View
                android:id="@+id/divider_line"
                android:layout_width="1dp"
                android:layout_height="@dimen/divider_line"
                android:background="@android:color/darker_gray"
                android:layout_marginStart="@dimen/location_space"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@id/gps_button"
                app:layout_constraintBottom_toBottomOf="parent"/>

        <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/current_location"
                android:layout_height='wrap_content'
                android:layout_width='0dp'
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@id/divider_line"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginStart="@dimen/location_space"
                android:layout_marginEnd="@dimen/location_space"
                android:clickable="true"
                android:focusable="true"
                android:animateLayoutChanges="true">
            <ImageView
                    android:id="@+id/location_icon"
                    android:layout_width="@dimen/curr_location_icon"
                    android:layout_height="@dimen/curr_location_icon"
                    android:src="@drawable/location"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>

            <TextView
                    android:id="@+id/current_text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toEndOf="@id/location_icon"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginStart="@dimen/location_text_start_margin"
                    android:gravity="start|center_vertical"
                    android:text="@string/default_location"
                    android:textSize="@dimen/curr_location_text_size"
                    android:textColor="@android:color/darker_gray"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:textAppearance='@style/ButtonTextAppearance'
            />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>