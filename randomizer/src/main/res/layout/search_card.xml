<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
        xmlns:android='http://schemas.android.com/apk/res/android'
        xmlns:app='http://schemas.android.com/apk/res-auto'
        android:id='@+id/search_container'
        android:layout_height='wrap_content'
        android:layout_width='match_parent'
        app:cardCornerRadius='@dimen/card_corner_radius'
        app:cardElevation="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent">
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_height='match_parent'
            android:layout_width='match_parent'>
        <ImageView
                android:id="@+id/search_icon"
                android:layout_width="@dimen/divider_line"
                android:layout_height="@dimen/divider_line"
                android:src="@drawable/search"
                android:layout_marginStart="@dimen/location_side_margin"
                android:layout_marginLeft="@dimen/location_side_margin"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

        <EditText
                android:id="@+id/user_input"
                android:layout_width="@dimen/_132sdp"
                android:layout_height="wrap_content"
                android:background="@null"
                android:layout_marginStart="@dimen/location_space"
                android:layout_marginEnd="@dimen/location_space"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@id/search_icon"
                app:layout_constraintBottom_toBottomOf="parent"
                android:hint="@string/enter_location"
                android:textSize="@dimen/location_edit_text"
                android:inputType="text"
                android:maxLines="1"/>

        <ToggleButton
                android:id='@+id/gps_button'
                android:background='@drawable/gps_selector'
                android:checked='false'
                android:layout_height='@dimen/divider_line'
                android:layout_width='@dimen/divider_line'
                android:text=''
                android:textOff=''
                android:textOn=''
                app:layout_constraintBottom_toBottomOf='parent'
                app:layout_constraintStart_toEndOf="@id/user_input"
                app:layout_constraintTop_toTopOf='parent'/>

        <View
                android:id="@+id/divider_line"
                android:layout_width="1dp"
                android:layout_height="@dimen/divider_line"
                android:background="@android:color/darker_gray"
                android:layout_marginEnd="@dimen/location_space"
                android:layout_marginStart="@dimen/location_space"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@id/gps_button"
                app:layout_constraintBottom_toBottomOf="parent"/>

        <com.google.android.material.button.MaterialButton
                android:id="@+id/current"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@id/divider_line"
                app:layout_constraintBottom_toBottomOf="parent"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                app:icon="@drawable/location"
                app:iconSize="@dimen/curr_location_icon"
                app:iconGravity="textStart"
                app:iconTint="@android:color/darker_gray"
                android:gravity="center"
                android:text="@string/default_location"
                android:textSize="@dimen/curr_location_text_size"
                android:textColor="@android:color/darker_gray"
                android:textAppearance='@style/ButtonTextAppearance'
                app:cornerRadius="@dimen/location_radius"
                android:onClick="focusLocation"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>